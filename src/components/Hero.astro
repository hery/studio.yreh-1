---
import content from '../data/content.json';

const { eyebrow, title, subtitle } = content.hero;
---

<div class="hero">
  <div class="hero-content">
    <p class="hero-eyebrow">{eyebrow}</p>
    <h1 class="hero-title" set:html={title} />
    <p class="hero-sub">{subtitle}</p>
  </div>
  <div class="hero-image">
    <div class="hero-placeholder">
      <span class="placeholder-text">Y</span>
    </div>
  </div>
  <div class="hero-scroll">
    <div class="scroll-line"></div>
    Scroll
  </div>
</div>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
    padding: 8rem 2.5rem 4rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-eyebrow {
    font-family: var(--mono);
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: 2rem;
    opacity: 0;
    animation: fadeUp 0.8s ease 0.2s forwards;
  }

  .hero-title {
    font-family: var(--serif);
    font-size: clamp(3rem, 7vw, 6rem);
    font-weight: 400;
    line-height: 0.95;
    letter-spacing: -0.03em;
    margin-bottom: 2.5rem;
    opacity: 0;
    animation: fadeUp 0.8s ease 0.4s forwards;
  }

  .hero-title :global(em) {
    font-style: italic;
    display: inline-block;
  }

  .hero-sub {
    font-family: var(--mono);
    font-size: 0.85rem;
    font-weight: 300;
    color: var(--muted);
    max-width: 480px;
    line-height: 1.8;
    opacity: 0;
    animation: fadeUp 0.8s ease 0.6s forwards;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    animation: fadeUp 0.8s ease 0.5s forwards;
  }

  .hero-placeholder {
    width: 320px;
    height: 320px;
    border-radius: 50%;
    background: var(--surface);
    border: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .placeholder-text {
    font-family: var(--serif);
    font-size: 8rem;
    color: var(--border);
    user-select: none;
  }

  .hero-scroll {
    position: absolute;
    bottom: 2.5rem;
    left: 2.5rem;
    font-family: var(--mono);
    font-size: 0.6rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--muted);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    animation: fadeUp 0.8s ease 1s forwards;
  }

  .scroll-line {
    width: 32px;
    height: 1px;
    background: var(--border);
    position: relative;
    overflow: hidden;
  }

  .scroll-line::after {
    content: '';
    position: absolute;
    left: -100%;
    top: 0;
    width: 100%;
    height: 100%;
    background: var(--fg);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 7rem 1.5rem 3rem;
      min-height: auto;
      padding-bottom: 6rem;
    }

    .hero-content {
      order: 2;
    }

    .hero-image {
      order: 1;
    }

    .hero-placeholder {
      width: 200px;
      height: 200px;
    }

    .placeholder-text {
      font-size: 5rem;
    }

    .hero-title {
      font-size: clamp(2.5rem, 10vw, 4rem);
    }
  }
</style>
