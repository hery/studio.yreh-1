---
interface Props {
  name: string;
  tag: string;
  description: string;
  url?: string | null;
}

const { name, tag, description, url } = Astro.props;
const Tag = url ? 'a' : 'div';
---

<Tag class="project-card" href={url || undefined} target={url ? "_blank" : undefined} rel={url ? "noopener noreferrer" : undefined}>
  <div class="project-header">
    <div class="project-info">
      <div class="project-name">{name}</div>
      <div class="project-tag">{tag}</div>
    </div>
    <div class="project-logo">
      <span class="logo-letter">{name.charAt(0)}</span>
    </div>
  </div>
  <div class="project-desc">{description}</div>
</Tag>

<style>
  .project-card {
    background: var(--bg);
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 320px;
    position: relative;
    cursor: pointer;
    transition: background 0.4s ease;
    text-decoration: none;
    color: inherit;
  }

  .project-card:hover {
    background: var(--surface);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .project-info {
    flex: 1;
  }

  .project-logo {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    background: var(--surface);
    border: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .logo-letter {
    font-family: var(--serif);
    font-size: 1.5rem;
    color: var(--muted);
  }

  .project-name {
    font-family: var(--serif);
    font-size: clamp(2rem, 4vw, 3.2rem);
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: 0.5rem;
  }

  .project-tag {
    font-family: var(--mono);
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: auto;
  }

  .project-desc {
    font-family: var(--mono);
    font-size: 0.75rem;
    font-weight: 300;
    color: var(--muted);
    line-height: 1.7;
    margin-top: 2rem;
    max-width: 340px;
  }

  @media (max-width: 768px) {
    .project-card {
      min-height: 260px;
    }
  }
</style>
