---
import content from '../data/content.json';

const { copyright, links } = content.footer;
---

<footer>
  <div class="footer-left">{copyright}</div>
  <div class="footer-right">
    {links.map(link => (
      <a href={link.url}>{link.label}</a>
    ))}
  </div>
</footer>

<style>
  footer {
    padding: 3rem 2.5rem;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-left {
    font-family: var(--mono);
    font-size: 0.65rem;
    color: var(--muted);
    letter-spacing: 0.1em;
  }

  .footer-right {
    display: flex;
    gap: 1.5rem;
  }

  .footer-right a {
    font-family: var(--mono);
    font-size: 0.65rem;
    color: var(--muted);
    text-decoration: none;
    letter-spacing: 0.08em;
    transition: color 0.3s ease;
  }

  .footer-right a:hover {
    color: var(--fg);
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 1.5rem;
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
